    month = dec,
    year = {2014},
    keywords = {Nanowires, Superconducting properties and materials},
    file = {Full Text PDF:/Users/bnijholt/Library/Application Support/Zotero/Profiles/b8yiwka3.default/zotero/storage/CSS9RUHF/Deng et al. - 2014 - Parity independence of the zero-bias conductance p.pdf:application/pdf;Snapshot:/Users/bnijholt/Library/Application Support/Zotero/Profiles/b8yiwka3.default/zotero/storage/4NKNV2KF/Deng et al. - 2014 - Parity independence of the zero-bias conductance p.html:text/html}
}

